<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/bg_card"
    app:cardCornerRadius="20dp"
    android:elevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:background="@drawable/bg_card"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kabah"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/txt_harga_paket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mulai Rp.20.000.000"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/merah"
                    android:textSize="15sp"
                    android:padding="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/txt_nama_paket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nama paket umroh"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="18dp"/>


                    <TextView
                        android:id="@+id/txt_waktu_berangkat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" waktu berangkat"
                        android:drawableLeft="@drawable/baseline_date_range_24"
                        android:textColor="@color/black"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/poppins_medium"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_lama_waktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" lama waktu (hari)"
                        android:drawableLeft="@drawable/baseline_access_time_24"
                        android:textColor="@color/black"
                        android:layout_marginLeft="18dp"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/btn_lihat_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="lihat selengkapnya"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/bar"
                    android:textSize="15sp"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>