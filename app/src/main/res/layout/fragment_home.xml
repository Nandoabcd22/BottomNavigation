<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/merah_pink"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:id="@+id/homeFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/putihpendek" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/putihpendek"
            android:outlineSpotShadowColor="@color/black" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="260dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo1"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/pinkmotif"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Assalamualaikum"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Fajar dwi"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/scrollH_type"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:scrollbars="none">

        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginVertical="240dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/containterFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/FrameBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/merah"
                    android:outlineSpotShadowColor="@color/white"
                    android:outlineAmbientShadowColor="@color/white"
                    android:textSize="30dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/btnPanduan"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/buku"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Panduan"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containterTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/TableBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/merah"
                    android:outlineSpotShadowColor="@color/white"
                    android:outlineAmbientShadowColor="@color/white"
                    android:textSize="30dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/btnAlquran"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:src="@drawable/quran"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Al-Qur'an"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containterMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/materialBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/merah"
                    android:outlineSpotShadowColor="@color/white"
                    android:outlineAmbientShadowColor="@color/white"
                    android:textSize="30dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/btnGalery"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:src="@drawable/baseline_photo_24"
                        android:layout_gravity="center"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Galeri"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerCompass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/compassBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/merah"
                    android:outlineAmbientShadowColor="@color/white"
                    android:outlineSpotShadowColor="@color/white"
                    android:textSize="30dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/btnTanya"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_quiz_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Tanya"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btntesti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="0dp"
                    android:backgroundTint="@color/merah"
                    android:outlineSpotShadowColor="@color/white"
                    android:outlineAmbientShadowColor="@color/white"
                    android:textSize="30dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/btnTestimoni"
                        android:layout_width="58dp"
                        android:layout_height="62dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_question_answer_24" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:text="Testi"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Pilihan Paket"
            android:layout_marginTop="340dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="390dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="130dp"
                    android:background="@drawable/umrohh"/>
                <TextView
                    android:layout_marginLeft="173dp"
                    android:layout_width="match_parent"
                    android:paddingTop="30dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tersedia beberapa pilihan paket eksklusif untuk menghadirkan pengalaman umroh istimewah dengan harga terjangkau."
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_marginLeft="173dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/merah"
                    android:text="Paket Umroh"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Mulia dari Rp 28,5 jt"
                    android:background="@drawable/rounded_background"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15sp"/>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/hajii"/>
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="180dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/merah"
                    android:text="Paket Haji"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="155dp"
                    android:layout_width="match_parent"
                    android:paddingTop="30dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tersedia beragam opsi paket perjalanan bintang 5 untuk pengalaman haji yang istimewa, dengan harga yang terjangkau."
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginRight="190dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Mulia dari Rp 168 jt"
                    android:background="@drawable/rounded_background"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15sp"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/parentPopularDrink"
            android:layout_marginTop="680dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Galeri Jamaah"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textSize="24sp"/>

            <HorizontalScrollView
                android:id="@+id/scrollH_popularDrink"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--        item popular drink-->
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="112dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#c9c9c9"
                            app:cardCornerRadius="12dp">
                            <ImageView
                                android:layout_width="112dp"
                                android:layout_height="119dp"
                                android:background="@drawable/ftjember"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Jember"
                                android:layout_marginTop="40dp"
                                android:paddingStart="25dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#c9c9c9"
                            app:cardCornerRadius="12dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                            <ImageView
                                android:layout_width="111dp"
                                android:layout_height="119dp"
                                android:background="@drawable/ftsurakarta"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Surakarta"
                                android:layout_marginTop="40dp"
                                android:paddingStart="8dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#c9c9c9"
                            app:cardCornerRadius="12dp">

                            <ImageView
                                android:layout_width="111dp"
                                android:layout_height="119dp"
                                android:background="@drawable/ftmedan"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Medan"
                                android:layout_marginTop="40dp"
                                android:paddingStart="30dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold"/>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:backgroundTint="#c9c9c9"
                            app:cardCornerRadius="12dp">

                            <ImageView
                                android:layout_width="111dp"                               android:layout_height="119dp"
                                android:background="@drawable/ftindramayu"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Indramayu"
                                android:layout_marginTop="40dp"
                                android:paddingStart="10dp"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>



    </RelativeLayout>

</ScrollView>