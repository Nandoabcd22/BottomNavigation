<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/merah"
    android:layout_height="match_parent"
    tools:context=".PesanActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="12dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btnKembali"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:outlineAmbientShadowColor="@color/merah"
                android:outlineSpotShadowColor="@color/merah"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemesanan"
                android:textColor="@color/merah"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="left"
                android:foregroundGravity="left"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/txt_nama_paket_dan_lama_waktu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        android:text="nama umroh dan lama waktu"
                        android:textColor="@color/merah"/>
                    <TextView
                        android:id="@+id/txt_tanggal_keberangkatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/baseline_access_time_24"
                        android:drawableTint="@color/merah"
                        android:text=" tanggal keberangkatan"
                        android:textColor="@color/merah"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penanggung Jawab Jamaah"
                android:textColor="@color/light_white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_jadwal_panen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_card"
                app:cardCornerRadius="20dp"
                android:elevation="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="100dp">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/bg_card"
                                android:src="@drawable/masjid"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_nama_agen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama Agen"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/merah"
                                android:layout_marginVertical="5dp"
                                android:layout_marginHorizontal="18dp"/>
                            <TextView
                                android:id="@+id/txt_email_agen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="email agen"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/merah"
                                android:layout_marginVertical="5dp"
                                android:layout_marginHorizontal="18dp"/>
                            <TextView
                                android:id="@+id/txt_no_hp_agen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="nomor telepon agen"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/merah"
                                android:layout_marginVertical="5dp"
                                android:layout_marginHorizontal="18dp"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Tambahan Jamaah"
                android:textColor="@color/light_white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ukuran baju jamaah"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/et_ukuran_baju"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:hint="masukkan ukuran baju"
                android:background="@drawable/rounded_editext"
                android:layout_marginHorizontal="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:textColor="@color/light_white"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank BRI"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0033648986887"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Mandiri"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0033648986887"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank BNI"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0033648986887"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Jatim"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0033648986887"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/merah"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnLanjutkan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjutkan"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/merah"
                android:backgroundTint="@color/merah2"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>